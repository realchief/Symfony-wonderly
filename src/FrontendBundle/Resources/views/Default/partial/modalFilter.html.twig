<div class="modal" id="filters-modal">{# START Filter Modal #}
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="modal-title">Choose filters</span>
                &nbsp;
                <span class="btn btn-default" onclick="clearFilterModal()">Clear</span>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">

                <div class="filter-field switch clearfix">
                    {{ form_label(form.free) }}
                    {{ form_widget(form.free) }}
                </div>
                <div class="filter-field switch clearfix">
                    {{ form_label(form.remember) }}
                    {% if app.user %}
                        {{ form_widget(form.remember) }}
                    {% else %}
                        {{ form_widget(form.remember, {'attr':{'disabled':'true', 'data-toggle':'tooltip', 'title':'Only for registered users'}}) }}
                    {% endif %}
                </div>

                <div class="filter-field ages clearfix">
                    {{ form_label(form.ages) }}
                    <div class="ages-wrapper clearfix">
                        {{ form_widget(form.ages) }}
                    </div>
                </div>

                <div class="filter-field ages clearfix">
                    {{ form_label(form.distance) }}
                    <div class="ages-wrapper clearfix">
                        {{ form_widget(form.distance) }}
                    </div>
                </div>

                <div class="filter-field">
                    {{ form_row(form.address, {'id':'autocomplete', 'attr':{'class':"form-control", 'onFocus':"geolocate()"}}) }}
                </div>

                <div class="filter-field ages clearfix">
                    {{ form_label(form.time) }}
                    <div class="ages-wrapper clearfix">
                        {{ form_widget(form.time) }}
                    </div>
                </div>

                <div class="filter-field cats clearfix">
                    {{ form_label(form.categories) }}
                    <div class="cats-wrapper clearfix">
                        {{ form_widget(form.categories) }}
                    </div>
                </div>
                {#<input id="autocomplete" placeholder="Enter your address" onFocus="geolocate()" type="text">#}


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>{# FINISH Filter Modal #}