{#

    Application header content.

#}
<header class="header">
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('frontend_default_index') }}">
                        <img src="{{ asset('Resources/public/img/logo-new.png') }}" width="150">
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="{{ path('frontend_default_aboutus') }}">Our Story</a>
                        </li>
                        <li>
                            <a href="{{ path('advertise_with_us') }}">Advertise With Us</a>
                        </li>
                        <li>
                            <a href="http://blog.gowonderly.com">WonderBlog</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if  app.user %}
                            <li>
                                <a href="{{ path('frontend_event_eventfavorite') }}"><i class="glyphicon glyphicon-heart-empty"></i></a>
                            </li>
                            <li>
                                <a href="{{ path('frontend_user_user') }}">{{ app.user.firstname }}</a>
                            </li>
                        {% else %}
                            <li><a>Guest</a></li>
                        {% endif %}

                        <li>
                            {% if  app.user %}
                                <a href="{{ path('fos_user_security_logout') }}" class="btn-login">Sign out</a>
                            {% else %}
                                <a href="{{ path('frontend_user_sociallogin') }}" class="btn-login">Sign in</a>
                            {% endif %}
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </div>
    </nav>
</header>